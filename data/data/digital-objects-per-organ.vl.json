{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": { "url": "https://cdn.humanatlas.io/hra-dashboard-data/data/digital-objects-per-organ.csv" },
  "width": "container",
  "height": "container",
  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14,
      "titleFontWeight": 500,
      "labelFontWeight": 500,
      "titleLineHeight": 21,
      "labelLineHeight": 18,
      "titleColor": "#201E3D",
      "labelColor": "#4B4B5E"
    },
    "legend": {
      "labelFont": "Metropolis",
      "labelFontSize": 14,
      "labelFontWeight": 500,
      "labelColor": "#201E3D"
    }
  },
  "mark": { "type": "point", "tooltip": true, "filled": true },
  "encoding": {
    "x": { "field": "organ", "type": "nominal", "title": "Organ" },
    "y": { "field": "type", "type": "nominal", "title": "Digital Object (DO) Type" },
    "size": {
      "field": "count",
      "type": "quantitative",
      "title": "# DOs",
      "legend": {
        "symbolType": "circle"
      }
    }
  }
}
