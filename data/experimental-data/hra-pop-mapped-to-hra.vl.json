{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": { "url": "https://cdn.humanatlas.io/hra-dashboard-data/experimental-data/hra-pop-mapped-to-hra.csv" },
  "width": 1296,
  "height": 488,
  "config": {
    "font": "Metropolis",

    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14,
      "titleFontWeight": 500,
      "labelFontWeight": 500,
      "titleLineHeight": 21,
      "labelLineHeight": 18,
      "titleColor": "#201E3D",
      "labelColor": "#4B4B5E"
    },
    "legend": {
      "labelFontSize": 14,
      "titleFontSize": 14,
      "titleLineHeight": 21,
      "titleColor": "#201E3D",
      "labelColor": "#4B4B5E",
      "titleFontWeight": 500,
      "labelFontWeight": 500
    }
  },
  "autosize": {
    "type": "fit",
    "contains": "padding",
    "resize": true
  },
  "params": [
    {
      "name": "group_by",
      "value": "Organ",
      "select": { "type": "point", "fields": ["group"] },
      "bind": { "input": "select", "options": ["Portal", "Organ", "Sex", "Age", "Ethnicity"], "name": "Group By" }
    }
  ],
  "mark": { "type": "bar", "tooltip": true },
  "transform": [
    {
      "filter": { "param": "group_by" }
    }
  ],
  "encoding": {
    "x": { "aggregate": "sum", "field": "count", "title": "# Datasets" },
    "y": { "field": "measure", "title": "HRA Mapping" },
    "color": { "field": "group_value", "title": "Grouped Value" }
  }
}
