{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Top-10 Users of HRA Products",
  "data": {
    "url": "https://cdn.humanatlas.io/hra-dashboard-data/usage/top-referrers.csv"
  },
  "width": "container",
  "height": "container",
  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14,
      "titleFontWeight": 500,
      "labelFontWeight": 500,
      "titleLineHeight": 21,
      "labelLineHeight": 18,
      "titleColor": "#201E3D",
      "labelColor": "#4B4B5E"
    },
    "legend": {
      "labelFont": "Metropolis",
      "labelFontSize": 14,
      "labelFontWeight": 500,
      "labelColor": "#201E3D"
    }
  },
  "encoding": {
    "y": { "field": "host", "type": "nominal" },
    "x": { "field": "requests", "type": "quantitative" },
    "tooltip": [
      { "field": "host", "type": "nominal" },
      { "field": "requests", "type": "quantitative" }
    ]
  },
  "layer": [
    {
      "mark": "bar"
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 3
      },
      "encoding": {
        "text": { "field": "requests", "type": "quantitative" }
      }
    }
  ]
}
