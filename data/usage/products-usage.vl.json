{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "HRA Products Usage",
  "data": {
    "url": "https://cdn.humanatlas.io/hra-dashboard-data/usage/hra-requests.csv"
  },
  "width": "container",
  "height": "container",
  "padding": { "right": 15 },
  "config": {
    "font": "Metropolis",
    "axis": {
      "labelFontSize": 14,
      "titleFontSize": 14,
      "titleFontWeight": 500,
      "labelFontWeight": 500,
      "titleLineHeight": 21,
      "labelLineHeight": 21,
      "titleColor": "#201E3D",
      "labelColor": "#4B4B5E",
      "titlePadding": 10
    },
    "legend": {
      "labelFontSize": 14,
      "titleFontSize": 14,
      "titleLineHeight": 21,
      "titleColor": "#201E3D",
      "labelColor": "#4B4B5E",
      "titleFontWeight": 500,
      "labelFontWeight": 500
    }
  },
  "mark": { "type": "line", "tooltip": true },
  "transform": [
    {
      "window": [
        {
          "field": "requests",
          "op": "mean",
          "as": "rolling_requests"
        }
      ],
      "groupby": ["site"],
      "frame": [-7, 7]
    }
  ],
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {
        "labelAngle": -45
      }
    },
    "y": {
      "field": "rolling_requests",
      "type": "quantitative",
      "scale": { "type": "log" },
      "title": "requests",
      "axis": {
        "labelAngle": -45
      }
    },
    "color": {
      "field": "site",
      "type": "nominal"
    }
  }
}
